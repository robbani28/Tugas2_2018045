<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <fragment
            android:id="@+id/fragment1"
            android:name="com.example.tugas2_2018045.Fragment1"
            tools:layout="@layout/fragment1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <fragment
            android:id="@+id/fragment2"
            android:name="com.example.tugas2_2018045.Fragment2"
            tools:layout="@layout/fragment2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false"
        >
        <fragment
            android:id="@+id/fragment3"
            android:name="com.example.tugas2_2018045.Fragment3"
            tools:layout="@layout/fragment3"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="match_parent"
            />
        <fragment
            android:id="@+id/fragment4"
            android:name="com.example.tugas2_2018045.Fragment4"
            tools:layout="@layout/fragment4"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>